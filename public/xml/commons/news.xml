<component id="NewsBlock">
    <div class="news-block p-2">
        <h2 class="news-block-title {mode}">
        {title}
        </h2>
        <div class="news-block-content" style="white-space:pre-line">
        {content}
        </div>
        <div class="d-flex flex justify-end items-center px-2" style="justify-content: flex-end; font-size:14px">
            <span class="news-block-date">{date}</span>
        </div>
    </div>
</component>